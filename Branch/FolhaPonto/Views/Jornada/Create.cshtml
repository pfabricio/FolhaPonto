@model FolhaPonto.Models.JornadaViewModel

@{
    ViewBag.Title = "Cadastrar Jornada";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Dados da Jornada</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CargoId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.CargoId, new SelectList(ViewBag.Cargo, "Id", "Nome"), "Selecione", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CargoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HoraEntrada, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="col-md-1 AlinharDivEsquerda">
                    @Html.EditorFor(model => model.HoraEntrada, new { htmlAttributes = new { @class = "form-control Tempo" } })
                </div>
                <div class="SemAlinhamento">
                    @Html.ValidationMessageFor(model => model.HoraEntrada, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HoraSaida, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="AlinharDivEsquerda col-md-1">
                    @Html.EditorFor(model => model.HoraSaida, new { htmlAttributes = new { @class = "form-control Tempo" } })
                </div>
                <div class="SemAlinhamento">
                    @Html.ValidationMessageFor(model => model.HoraSaida, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TempoIntervalo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="AlinharDivEsquerda col-md-1">
                    @Html.EditorFor(model => model.TempoIntervalo, new { htmlAttributes = new { @class = "form-control Numero" } })
                </div>
                <div class="SemAlinhamento">
                    @Html.ValidationMessageFor(model => model.TempoIntervalo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TempoMeta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="col-md-1 AlinharDivEsquerda">
                    @Html.EditorFor(model => model.TempoMeta, new { htmlAttributes = new { @class = "form-control Numero" } })
                </div>
                <div class="SemAlinhamento">
                    @Html.ValidationMessageFor(model => model.TempoMeta, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
@section scripts
{
    <link href="~/Content/datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/locales/bootstrap-datepicker.pt-BR.min.js"></script>
    <script src="~/Scripts/addMask.js"></script>
}
