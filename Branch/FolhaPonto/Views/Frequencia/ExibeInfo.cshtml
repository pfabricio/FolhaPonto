@using FolhaPonto.Controllers
@model FolhaPonto.Models.FrequenciaListViewModel

@{
    ViewBag.Title = "Informação da Frequência";
    var tipo = (int)ViewBag.Tipo;
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Data)
        </dd>
        @if (tipo >= (int)TipoEntrada.Entrada)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Entrada)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Entrada)
            </dd>
        }

        @if (tipo >= (int)TipoEntrada.EntradaIntervalo)
        {
            <dt>
                @Html.DisplayNameFor(model => model.EntradaIntervalo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.EntradaIntervalo)
            </dd>
        }

        @if (tipo >= (int)TipoEntrada.SaidaIntervalo)
        {
            <dt>
                @Html.DisplayNameFor(model => model.SaidaIntervalo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SaidaIntervalo)
            </dd>
        }

        @if (tipo >= (int)TipoEntrada.Saida)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Saida)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Saida)
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Voltar", "Index", "Home")
</p>
