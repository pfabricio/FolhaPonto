@using FolhaPonto.Extensions
@using PagedList.Mvc
@model PagedList.IPagedList<FolhaPonto.Models.FrequenciaListViewModel>

@{
    ViewBag.Title = "Suas Frequências";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            Data
        </th>
        <th>
            Entrada
        </th>
        <th>
            Entrada Intervalo
        </th>
        <th>
            Volta Intervalo
        </th>
        <th>
            Saida
        </th>
    </tr>

    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Entrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntradaIntervalo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SaidaIntervalo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Saida)
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5">
                Nenhuma frequência foi registrada.
            </td>
        </tr>
    }

</table>
<div class="row">
    <div class="col-sm-12">
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
<div>
    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-default" })
</div>